


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_nuevo"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/textplash"
android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="Cree calendarios para controlar una zona dolorosa de su cuerpo"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/icons"
            android:textStyle="bold"

            android:layout_alignTop="@+id/imageSplash"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical" />

    <ImageView
        android:id="@+id/imageSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"

        android:scaleType="fitEnd"
        android:src="@drawable/frame11"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
 />

    </LinearLayout>